@page "/regler"

<NavigationBar></NavigationBar>

<style>
    .extra-small-icon {
        font-size: 12px;
        color: #F4DD15
    }
</style>

<MudCard Class="ma-2">
    <MudCardHeader Style="background-color: #F4DD15">
        <CardHeaderContent>
            <MudText Typo="Typo.subtitle2">Stemming</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2" Class="mb-2">
            Man kan gi 1-8, 10 og 12 poeng. I hver kategori kan man gi én 10-er og én 12-er. De landene som har fått 10-ere eller 12-ere vil være markert med henholdsvis <MudIcon Icon="@Icons.Material.Filled.StarHalf"  Class="extra-small-icon"></MudIcon> og <MudIcon Icon="@Icons.Material.Filled.Star"  Class="extra-small-icon"></MudIcon>. 
        </MudText>
        <MudText Typo="Typo.body2">
            Avstemning stenger før resultatet i Eurovision er avslørt.
        </MudText>
    </MudCardContent>
</MudCard>

<MudCard Class="ma-2">
    <MudCardHeader Style="background-color: #F4DD15">
        <CardHeaderContent>
            <MudText Typo="Typo.subtitle2">Poeng</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2" Class="mb-2">
            Poeng beregnes som summen av differense- og bonuspoeng for alle deltagerland. Altså er det om å gjøre å få færrest poeng.
        </MudText>
        <MudText Typo="Typo.body2" Class="mb-2">
            Differansepoeng for et land tilsvarer absolutt differanse mellom faktisk og gjettet plassering. 
        </MudText>
        <MudText Typo="Typo.body2" Class="mb-2">
            Bounspoengene er negative. Man får bonuspoeng dersom man gjetter riktig plassering og man ikke har gitt flere land denne plasseringen. Antall bonuspoeng er som følger:
        </MudText>
        <MudTable Items="@bonusPoints" T="BonusPoints" Breakpoint="Breakpoint.None">
            <HeaderContent>
                <MudTh>plassering</MudTh>
                <MudTh>bonuspoeng</MudTh>
            </HeaderContent>
            <RowTemplate Context="row">
                <MudTd>@row.ranking</MudTd>
                <MudTd>@row.pointsAmount</MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>

@code {
    private record BonusPoints(string ranking, int pointsAmount);

    private List<BonusPoints> bonusPoints = new List<BonusPoints>()
    {
        new BonusPoints("1", -25),
        new BonusPoints("2", -18),
        new BonusPoints("3", -15),
        new BonusPoints("4", -12),
        new BonusPoints("5", -10),
        new BonusPoints("6", -8),
        new BonusPoints("7", -6),
        new BonusPoints("8", -4),
        new BonusPoints("9", -2),
        new BonusPoints("10", -1),
        new BonusPoints("11-", 0)
    };
}